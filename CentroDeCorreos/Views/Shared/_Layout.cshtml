<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Centro de correos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <!----<li>Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>Html.ActionLink("Contacto", "Contact", "Home")</li>--->
                </ul>
            </div>
        </div>
    </div>

    <div class="body-content">
        <div class="navbar  navbar-left">
            <div class="container">
                <div class="navbar-nav">
                    <ul class="nav">
                        <li>@Html.ActionLink("Bandeja Entrada", "Index", "Home")</li>
                        <li>@Html.ActionLink("Enviados", "Index", "Home")</li>
                        <li>@Html.ActionLink("Archivados", "Index", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Correos</p>
        </footer>
    </div>



    @RenderSection("scripts", required: false)
</body>
</html>
