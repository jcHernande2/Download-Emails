@model CentroDeCorreos.Models.tblCorreosElectronicosPruebas
<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Fecha</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" value="@Model.FechaEnvio">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="inputPassword3" class="col-sm-2 control-label">De</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword3" placeholder="Password" value="@Model.Remitente">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="inputPassword3" class="col-sm-2 control-label">Para</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword3" placeholder="Password" value="@Model.Destinatario">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="inputPassword3" class="col-sm-2 control-label">CC</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword3" placeholder="Password" value="@Model.Cc">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="inputPassword3" class="col-sm-2 control-label">CCO</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword3" placeholder="Password" value="@Model.Cco">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="inputPassword3" class="col-sm-2 control-label">Asunto</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputPassword3" placeholder="Password" value="@Model.Asunto">
            </div>
        </div>
        <div class="col-sm-12">
            @foreach (var file in Model.tblAdjuntosCorreoPruebas)
            {
                <a href="">@file.NombreArchivo.ToString()</a>
            }
</div>
            <div class="col-sm-12">

                <div>@Html.Raw(Model.Cuerpo.ToString())</div>
            </div>
        
    </div>
</div>